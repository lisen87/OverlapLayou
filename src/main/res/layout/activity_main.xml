<?xml version="1.0" encoding="utf-8"?>
<view.OverlapLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="第一个卡片"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#f99999"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="第2个卡片"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#393039"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvup"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="子布局中的1号卡片"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#00ce99"/>
        <TextView
            android:id="@+id/tvdown"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="子布局中的2号卡片"
            android:textSize="16sp"
            android:gravity="center"
            android:background="#009999"/>
    </LinearLayout>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="第3个卡片"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#f99900"/>
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="第4个卡片"
        android:textSize="16sp"
        android:gravity="center"
        android:background="#119900"/>

</view.OverlapLayout>
